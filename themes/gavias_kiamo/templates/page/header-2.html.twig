<style>

    .header-v2 .gva-offcanvas-mobile.show-view {

        background: #17609f!important;

    }
    header.header-v2 {
        background: #17609f!important;
        margin-top: 0;
        -webkit-box-shadow: 0 4px 4px 1px rgba(0, 0, 0, 0.2);
        box-shadow: 0 4px 4px 1px rgba(0, 0, 0, 0.2);
    }
    header.header-v2 .stuck {
        background-color: #17609f !important;
        height: 55px;
    }

    header.header-v2 .gva-search-region {
        margin-top: -6px !important;
    }

    header.header-v2 .site-branding-logo {
        padding-top: 0;
    }

    header.header-v2 .header-inner {
        padding-right: 0;
        margin-top: 10px;
    }

    header.header-v2 .navigation .gva_menu > li > a {
        color: #fff;
        position: relative;
        padding: .5rem 1rem;
    }

    header.header-v2 .navigation .gva_menu > li > a::before {
        background: transparent;
    }

    .header-v2 .p-static {
        position: static !important;
        padding-top: 6px;
    }

    .header-v2 .site-branding-logo img {
        max-height: 50px !important;
        background: transparent !important;
    }

    #itu-landing-hero {
        padding-top: 50px;
    }

    header.header-v2 .navigation .gva_menu .sub-menu {
        background-color: #17609f;
        border-top: 1px solid #17609f;
        display: none;
        position: absolute;
        min-width: 280px;
        top: 2.1rem;
    }

    .wForm input[type="button"],
    .wForm input[type="submit"] {
        border-radius: 0;
        border: 1px solid #fff;
        font-size: 12px;
        padding: 10px 20px;
        text-decoration: none;
        text-shadow: none;
    }

    header.header-v2 .navigation .gva_menu .sub-menu,
    header.header-v2 .navigation .gva_menu > li:hover > ul.sub-menu,
    header.header-v2 .navigation .gva_menu > li:hover div.sub-menu {
        border: none !important;
        background-color: #17609f!important;
        color: #fff !important;
        box-shadow: none;
    }
    header.header-v2 .menu-item--expanded ul.menu > li {
        border-bottom: none;
    }
    header.header-v2 .gva-navigation ul li ul .menu .sub-menu {
        border: none !important;
        background-color: #17609f!important;
        color: #fff !important;
        box-shadow: none;
    }
    #header .header-v2 .navigation .gva_menu .sub-menu > li > a:link,
    #header .header-v2 .navigation .gva_menu .sub-menu > li > a:visited {
        color: #fff !important;
    }
    .header-v2 .navigation .gva_menu .sub-menu > li > a:hover {
        text-decoration: underline !important;
    }
    .header-v2 .navigation .gva_menu .sub-menu > li :first-child {
        color: #fff!important;
    }
    header.header-v2 .area-main-menu .gva-search-region.show .search-content {
        border: none !important;
        background-color: #17609f !important;
        padding: 10px;
        width: 270px;
        box-shadow: none;
    }
    .header-v2 .gva-navigation a:hover {
        text-decoration: underline;
        color: #fff !important;
    }
    @media (max-width: 1199px) {
        .header-v2 .site-branding-logo {
            width: 70px;
        }
        .header-v2 .header-main .site-branding-logo a {
              padding: 0 !important;
        }
        .header-v2 .site-branding-logo {
            padding: 0 !important;
        }
        .header-v2 .site-branding-logo img {
            padding-top: 5px;
        }
        .header-v2 .menu-bar {
             margin-top: 2px;
        }
    }
    @media (max-width: 760px) {
        .header-v2 .stuck {
            height: 70px;
        }
    }
</style>
<header id="header" class="header-v2">


    {% set class_sticky = '' %}
    {% if sticky_menu == 1 %}
        {% set class_sticky = 'gv-sticky-menu' %}
    {% endif %}

    <div class="header-main {{ class_sticky }}">
        <div class="container header-content-layout">
            <div class="header-main-inner p-relative">
                <div class="row">

                    <div class="col-md-1 col-sm-6 col-xs-8 branding">
                        {% if page.branding %}
                            {{ page.branding }}
                        {% endif %}
                    </div>

                    <div class="col-md-11 col-sm-6 col-xs-4 p-static">
                        <div class="header-inner clearfix">
                            <div class="main-menu">
                                <div class="area-main-menu">
                                    <div class="area-inner">
                                        <div class="gva-offcanvas-mobile">
                                            <div class="close-offcanvas hidden"><i class="fa fa-times"></i></div>
                                            {% if page.main_menu %}
                                                {{ page.main_menu }}
                                            {% endif %}

                                            {% if page.offcanvas %}
                                                <div class="after-offcanvas hidden">
                                                    {{ page.offcanvas }}
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div id="menu-bar" class="menu-bar hidden-lg hidden-md">
                                            <span class="one"></span>
                                            <span class="two"></span>
                                            <span class="three"></span>
                                        </div>

                                        {% if page.search %}
                                            <div class="gva-search-region search-region">
                                                <span class="icon"><i class="fa fa-search"></i></span>
                                                <div class="search-content">
                                                    {{ page.search }}
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</header>
